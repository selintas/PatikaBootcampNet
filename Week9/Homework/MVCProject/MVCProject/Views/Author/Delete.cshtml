@model MVCProject.Models.AuthorViewModel

@{
    ViewData["Title"] = "Delete Author";
}

<h1>Delete Author</h1>

<h3>Are you sure you want to delete the author?</h3>

<div>
    <h4>Author Details</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Full Name
        </dt>
        <dd class="col-sm-10">
            @Model.FullName
        </dd>
    </dl>
</div>

<form method="post" asp-action="Delete" asp-route-id="@Model.Id">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Author")" class="btn btn-secondary">Cancel</a>
</form>
