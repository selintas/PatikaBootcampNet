@model MVCProject.Models.BookCreateViewModel

@{
    ViewData["Title"] = "Create Book";
}

<h2>Create New Book</h2>

<div class="container mt-5">
    <form asp-action="Create" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="Title" class="form-label">Book Title</label>
            <input asp-for="Title" class="form-control" id="Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="AuthorId" class="form-label">Author</label>
            <select asp-items="ViewBag.Authors" asp-for="AuthorId" class="form-select">
                <option value="">-- Select Author --</option>
                
            </select> 

            <span asp-validation-for="AuthorId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Genre" class="form-label">Genre</label>
            <input asp-for="Genre" class="form-control" id="Genre" />
            <span asp-validation-for="Genre" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="PublishDate" class="form-label">Publish Date</label>
            <input asp-for="PublishDate" class="form-control" type="date" id="PublishDate" />
            <span asp-validation-for="PublishDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="ISBN" class="form-label">ISBN</label>
            <input asp-for="ISBN" class="form-control" id="ISBN" />
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="CopiesAvailable" class="form-label">Copies Available</label>
            <input asp-for="CopiesAvailable" class="form-control" id="CopiesAvailable" />
            <span asp-validation-for="CopiesAvailable" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="List" class="btn btn-secondary">Cancel</a>
    </form>
</div>

