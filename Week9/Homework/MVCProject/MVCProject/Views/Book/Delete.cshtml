@model MVCProject.Models.BookViewModel

@{
    ViewData["Title"] = "Delete Book";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h3>Delete Book Confirmation</h3>
        </div>
        <div class="card-body">
            <p class="text-danger">Are you sure you want to delete this book? This action cannot be undone!</p>

            <div class="mb-3">
                <strong>Book Title:</strong> @Model.Title
            </div>

            <div class="mb-3">
                <strong>Book ID:</strong> @Model.Id
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="text-end">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
